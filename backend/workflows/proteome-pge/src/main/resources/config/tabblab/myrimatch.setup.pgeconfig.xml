<?xml version="1.0" encoding="UTF-8"?>
<pgeConfig>

        <!-- PGE instructions -->
        <exe dir="[PGE_ROOT]/output/jobs/[ProductId]" shell="/bin/bash">
          	<cmd>ln -s [DATA_STAGING]/[ProductName].raw ./[ProductName].raw</cmd>
          	<cmd>ln -s [DATA_STAGING]/[ProductName].mzML ./[ProductName].mzML</cmd>
          	<cmd>ln -s [DATA_STAGING]/cystfluid.myrimatch.cfg ./cystfluid.myrimatch.cfg</cmd>
          	<cmd>ln -s [DATA_STAGING]/TargetDB.fasta ./TargetDB.fasta</cmd>
          	<cmd>ln -s [DATA_STAGING]/TargetDB-reverse.fasta ./TargetDB-reverse.fasta</cmd>
        </exe>

        <!-- custom metadata -->
        <customMetadata>    
        	<metadata key="JobDir" val="[PGE_ROOT]/output/jobs/[ProductId]"/>                
      	</customMetadata>

</pgeConfig>

